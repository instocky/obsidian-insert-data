{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "types": [
            "obsidian"
        ],
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "declaration": true,
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020"
        ]
    },
    "include": [
        "**/*.ts"
    ]
}